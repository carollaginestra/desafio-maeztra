  head
    meta(http-equiv="content-type", content="text/html;charset=UTF-8")
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="theme-color", content="#FAA500")
    meta(name="apple-mobile-web-app-status-bar-style", content="black-translucent")
    meta(name="format-detection" content="telephone=no")
    meta(name="title", content="E-commerce home - Maeztra")
    meta(name="description", content="E-commerce home - Maeztra")
    meta(property="og:locale", content="pt_BR")
    meta(property="og:site_name", content="Maeztra")
    meta(property="og:title", content="E-commerce home - Maeztra")
    meta(property="og:description", content="Test for Maeztra")
